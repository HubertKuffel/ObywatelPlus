<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObywatelPlus.Hubert"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material.Forms" >
    <ContentPage.Content>
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Entry x:Name="rejestacjaText1" Placeholder="Numer rejestracji" HeightRequest="50" />
            <Entry Grid.Row="1"  x:Name="dodatkoweText" Placeholder="Dodatkowe informacje (opcjonalnie)" HeightRequest="50" />
             
            <material:MaterialButton Grid.Row="2" BackgroundColor="#EAEAEA" Text="Alarmuj" Clicked="Button_Clicked" HorizontalOptions="Center" TextColor="Black" VerticalOptions="Center" />
 
            <material:MaterialButton Grid.Row="3" BackgroundColor="#EAEAEA" Text="Moje Rejestracje" Clicked="Button_Clicked1" HorizontalOptions="Center" TextColor="Black" VerticalOptions="Center" />

        </Grid>
    </ContentPage.Content>
</ContentPage>