<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ObywatelPlus.Damian">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Image Grid.Row="0" x:Name="PhotoImage"/>
                <Button Grid.Row="1" x:Name="CameraButton" Text="Zrób zdjęcie"/>
                <Entry x:Name="Opis" Grid.Row="2" Placeholder="Wprowadź opis"/>
                <Button x:Name="WyslijButton" Grid.Row="3" Text="Wyślij"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
